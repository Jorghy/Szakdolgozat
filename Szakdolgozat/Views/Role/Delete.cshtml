@model Szakdolgozat.DTO.ViewModels.RoleVm
@{
    ViewData["Title"] = "Törlés";
}

<div class="container">
    <h1>Törlés</h1>

    <h3>Tényleg törölni szeretnéd?</h3>
    <div>
        <h4>Beosztás</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.RoleId)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.RoleId)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.RoleDesc)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.RoleDesc)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="RoleId" />
            <input type="submit" value="Törlés" class="btn btn-danger" /><br /><br />
            <a class="btn btn-info" asp-action="Index">Vissza</a>
        </form>
    </div>
</div>