@model Szakdolgozat.DTO.ViewModels.RoleVm

<div class="row justify-content-center">
    <div class="col-8">
        @if (Model == null)
        {
            ViewData["Title"] = "Hozzáadás";
            <h1>Hozzáadás</h1>

            <h4>Szerepkör</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="RoleDesc" class="control-label"></label>
                            <input asp-for="RoleDesc" class="form-control" />
                            <span asp-validation-for="RoleDesc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Mentés" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a class="btn btn-info" asp-action="Index">Vissza</a>
            </div>
        }
        else
        {
            ViewData["Title"] = "Szerkesztés";
            <h1>Szerkesztés</h1>

            <h4>Szerepkör</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="RoleId" />
                        <div class="form-group">
                            <label asp-for="RoleDesc" class="control-label"></label>
                            <input asp-for="RoleDesc" class="form-control" />
                            <span asp-validation-for="RoleDesc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Mentés" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a class="btn btn-info" asp-action="Index">Vissza</a>
            </div>
        }
    </div>
</div>