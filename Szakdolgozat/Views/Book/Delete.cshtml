@model Szakdolgozat.DTO.ViewModels.BookVm
@{
    ViewData["Title"] = "Törlés";
}

<h1>Törlés</h1>

<h3>Tényleg törölni szeretnéd?</h3>
<div>
    <h4>Könyv</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Id)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Title)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Type)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Type)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Publisher.PublisherName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Publisher.PublisherName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Price)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.YtdSales)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.YtdSales)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Notes)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Notes)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PublishedDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PublishedDate)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Törlés" class="btn btn-danger" /><br /><br />
        <a class="btn btn-info" asp-action="Index">Vissza</a>
    </form>
</div>