@model Szakdolgozat.DTO.ViewModels.EditRoleVm

@{ 
    ViewBag.Title = "Szerepkör szerkesztése";
}

<div class="row justify-content-center">
    <div class="col-7">

        <h1>Szerepkör szerkesztése</h1>

        <form class="mt-3" asp-action="EditRole">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10"><input asp-for="Id" disabled class="form-control" /></div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <input type="submit" value="Mentés" class="btn btn-success" />
                <a class="btn btn-primary" asp-action="ListRoles">Vissza</a>
            </div>
        </form>

        <div class="card">
            <div class="card-header">
                <h3>Felhasználók listája</h3>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    <ul>
                        @foreach (var user in Model.Users)
                        {
                            <li><h5 class="card-title">@user</h5></li>
                        }
                    </ul>                    
                }
                else
                {
                    <h5 class="card-title">Nincs felhasználó ezzel a szerepkörrel</h5>
                }
            </div>
            <div class="card-footer">
                <a asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width: auto">Hozzáadás vagy Törlés</a>
            </div>
        </div>
    </div>
</div>