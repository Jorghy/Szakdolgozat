@model IEnumerable<Szakdolgozat.DTO.ViewModels.PublisherVm>
@{
    ViewData["Title"] = "Kiadó";
}

@if(ViewData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Bezár">
            <span aria-hidden="true">&times;</span>
        </button>
        @ViewData["Message"]
    </div>
}

<h1>Kiadók</h1>

<p>
    @Html.ActionLink("Hozzáadás", "Create", new { }, new { @class = "btn btn-success" })
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.PublisherId)</th>
        <th>@Html.DisplayNameFor(model => model.PublisherName)</th>
        <th>@Html.DisplayNameFor(model => model.City)</th>
        <th>@Html.DisplayNameFor(model => model.State)</th>
        <th>@Html.DisplayNameFor(model => model.Country)</th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.PublisherId)</td>
            <td>@Html.DisplayFor(modelItem => item.PublisherName)</td>
            <td>@Html.DisplayFor(modelItem => item.City)</td>
            <td>@Html.DisplayFor(modelItem => item.State)</td>
            <td>@Html.DisplayFor(modelItem => item.Country)</td>
            <td>
                @Html.ActionLink("Részletek", "Details", new { id = item.PublisherId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Szerkesztés", "Edit", new { id = item.PublisherId }, new { @class = "btn btn-secondary" }) |
                @Html.ActionLink("Törlés", "Delete", new { id = item.PublisherId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>