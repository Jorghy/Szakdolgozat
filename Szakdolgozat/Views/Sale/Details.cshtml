@model Szakdolgozat.DTO.ViewModels.SaleVm
@{
    ViewData["Title"] = "Részletek";
}

<div class="container">
    <h1>Részletek</h1>

    <div>
        <h4>Eladás</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SaleId)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.SaleId)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Store.StoreName)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Store.StoreName)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book.Title)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Book.Title)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderNum)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderNum)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderDate)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderDate)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Quantity)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Quantity)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PayTerms)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PayTerms)</dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.SaleId">Szerkesztés</a>
        <a class="btn btn-info" asp-action="Index">Vissza</a>
    </div>
</div>