@model IEnumerable<Szakdolgozat.DTO.ViewModels.SaleVm>
@{
    ViewData["Title"] = "Eladás";
}

<div class="container">

    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Bezár">
                <span aria-hidden="true">&times;</span>
            </button>
            @ViewData["Message"]
        </div>
    }

    <h1>Eladások</h1>

    <p>
        @Html.ActionLink("Hozzáadás", "Create", new { }, new { @class = "btn btn-success" })
    </p>

    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Store.StoreName)</th>
            <th>@Html.DisplayNameFor(model => model.Book.Title)</th>
            <th>@Html.DisplayNameFor(model => model.OrderNum)</th>
            <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.PayTerms)</th>
            <th style="width: 320px"></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Store.StoreName)</td>
                <td>@Html.DisplayFor(modelItem => item.Book.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderNum)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.PayTerms)</td>
                <td>
                    @Html.ActionLink("Részletek", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Szerkesztés", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary" }) |
                    @Html.ActionLink("Törlés", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>