@model Szakdolgozat.DTO.ViewModels.UserVm
@{
    ViewData["Title"] = "Belépés";
}

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Bezár">
            <span aria-hidden="true">&times;</span>
        </button>
        @ViewData["Message"]
    </div>
}

<div class="container">
    <div class="row text-center">
        <h1 class="col-12">Belépés</h1>
        <form asp-action="Login" class="col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label col-2" style="font-weight: bold"></label>
                <input asp-for="EmailAddress" class="form-control col-9" style="display:inline" />
                <span asp-validation-for="EmailAddress" class="text-danger" style="display:block"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label col-2" style="font-weight: bold"></label>
                <input asp-for="Password" class="form-control col-9" style="display:inline" />
                <span asp-validation-for="Password" class="text-danger" style="display:block"></span>
            </div>
            <input type="submit" value="Belépés" class="btn btn-success" />
            <a class="btn btn-secondary" asp-action="SignUp">Regisztráció</a>
        </form>
    </div>
</div>