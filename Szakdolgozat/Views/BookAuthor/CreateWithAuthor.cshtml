@model BookAuthorVm

@{
    ViewBag.Title = "Könyv hozzáadása szerzőhöz";
}

<div class="row justify-content-center">
    <div class="col-8">
        <h1>Könyv hozzáadása szerzőhöz</h1>

        <h4>Szerző: @ViewBag.author</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="CreateWithAuthor">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AuthorId" />
                    <div class="form-group">
                        <label asp-for="BookId" class="control-label"></label>
                        <select asp-for="BookId" asp-items="ViewBag.book" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorOrder" class="control-label"></label>
                        <input asp-for="AuthorOrder" class="form-control" />
                        <span asp-validation-for="AuthorOrder" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RoyalityPercentage" class="control-label"></label>
                        <input asp-for="RoyalityPercentage" class="form-control" />
                        <span asp-validation-for="RoyalityPercentage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Mentés" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a class="btn btn-info" asp-action="Index">Vissza</a>
        </div>
    </div>
</div>
