@model BookAuthorVm
@{
    ViewData["Title"] = "Törlés";
}

<h1>Törlés</h1>

<h3>Tényleg törölni szeretnéd?</h3>
<div>
    <h4>Szerzőhöz rendelt könyv</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Szerző neve
        </dt>
        <dd class="col-sm-10">
            @Model.Author.LastName @Model.Author.FirstName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuthorOrder)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoyalityPercentage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoyalityPercentage)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-dest="@ViewBag.Dest">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="AuthorId" />
        <input type="submit" value="Törlés" class="btn btn-danger" /> <br /><br />
        <a class="btn btn-info" asp-action="Index">Vissza</a>
    </form>
</div>
